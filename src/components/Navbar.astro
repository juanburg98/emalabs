---
const NAVIGATION_LINKS = [
  {
    title: "Inicio",
    href: "/#",
  },
  {
    title: "Servicios",
    href: "/#services",
  },
  {
    title: "Portfolio",
    href: "/portfolio",
  },
];
---

<div class="top-0 w-full border-b-1 bg-tertiary shadow-sm">
  <div class="m-1 flex flex-row items-center justify-between px-8 py-5">
    <a href="/#"><img src="/logo.svg" alt="Logo" width="180px" /></a>
    <ul class="flex flex-row gap-7">
      {
        NAVIGATION_LINKS.map(({ title, href }) => {
          return (
            <>
              <li>
                <a
                  class="text-sm font-medium tracking-tight text-secondary hover:text-primary"
                  href={href}
                >
                  {title}
                </a>
              </li>
            </>
          );
        })
      }
      <li>
        <a
          class="rounded-md border-1 bg-quinary p-2 text-sm font-medium tracking-tight text-secondary shadow-sm hover:border-sextenary hover:text-primary"
          href="/contact"
        >
          Contacto
        </a>
      </li>
    </ul>
  </div>
</div>
