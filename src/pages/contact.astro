---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contacto | Emalabs">
  <header>
    <nav>
      <Navbar />
    </nav>
  </header>
  <main>
    <section class="h-full w-screen">
      <div class="flex justify-center">
        <h2
          class="m-1 w-1/3 pt-28 text-center font-serif text-5xl font-semibold tracking-title text-primary"
        >
          ¿Tenés algún proyecto en mente o querés hablar?
        </h2>
      </div>
      <div class="flex justify-center">
        <form class="m-2 flex flex-col justify-center gap-8 pt-20">
          <label class="flex flex-col gap-1">
            <span class="text-base font-medium tracking-text text-secondary"
              >Nombre completo *</span
            >
            <input
              class="w-96 rounded-md border-1 bg-quinary px-4 py-2 shadow-sm"
              type="text"
              name="name"
              id="name"
              placeholder="Ingresá tu nombre completo"
              minlength="4"
              required
            />
          </label>
          <label class="flex flex-col gap-1">
            <span class="text-base font-medium tracking-text text-secondary"
              >Compañía *</span
            >
            <input
              class="w-96 rounded-md border-1 bg-quinary px-4 py-2 shadow-sm"
              type="text"
              name="company"
              id="company"
              placeholder="Ingresá el nombre de tu compañía"
              required
            />
          </label>
          <label class="flex flex-col gap-1">
            <span class="text-base font-medium tracking-text text-secondary"
              >Correo electrónico *</span
            >
            <input
              class="w-96 rounded-md border-1 bg-quinary px-4 py-2 shadow-sm"
              type="email"
              name="mail"
              id="mail"
              placeholder="Ingresá tu correo electrónico"
              required
            />
          </label>
          <label class="flex flex-col gap-1">
            <span class="text-base font-medium tracking-text text-secondary"
              >Teléfono *</span
            >
            <input
              class="w-96 rounded-md border-1 bg-quinary px-4 py-2 shadow-sm"
              type="tel"
              name="number"
              id="number"
              placeholder="Ingresá tu teléfono o celular"
              minlength="8"
              required
            />
          </label>
          <label class="flex flex-col gap-1">
            <span class="text-base font-medium tracking-text text-secondary"
              >Mensaje *</span
            >
            <textarea
              class="w-96 rounded-md border-1 bg-quinary px-4 py-2 shadow-sm"
              name="message"
              id="message"
              rows="4"
              placeholder="Escribí tu mensaje"
              minlength="10"
              required></textarea>
          </label>
          <div class="flex justify-center pb-28">
            <button
              class="m-1 rounded-lg border-1 bg-quinary px-4 py-2 text-base font-medium tracking-text text-secondary shadow-sm hover:border-sextenary hover:text-primary"
              type="submit">Enviar</button
            >
          </div>
        </form>
      </div>
    </section>
  </main>
  <footer>
    <Footer />
  </footer>
</Layout>
